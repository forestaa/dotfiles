{
    "title": "HHKB JIS",
    "rules": [
        {
            "description": "japanese_pc_xferをdelete_or_backspaceに変換",
            "manipulators": [
                {
                    "conditions": [
                    ],
                    "from": {
                        "key_code": "japanese_pc_xfer"
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "japanese_pc_nferをIMEのON/OFF切り替えキーに変換",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "language": "en"
                                }
                            ]
                        }
                    ],
                    "from": {
                        "key_code": "japanese_pc_nfer"
                    },
                    "to": [
                        {
                            "select_input_source": {
                                "input_source_id": "^com\\.google\\.inputmethod\\.Japanese\\.base$"
                            }
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                    "language": "ja"
                                }
                            ]
                        }
                    ],
                    "from": {
                        "key_code": "japanese_pc_nfer"
                    },
                    "to": [
                        {
                            "select_input_source": {
                                "input_source_id": "^com\\.apple\\.inputmethod\\.Kotoeri\\.Roman$"
                            }
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
